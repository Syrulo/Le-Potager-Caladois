<form action="{{ url('app_product_delete', { id: product.id }) }}" method="post" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce produit ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
	<button type="submit" class="btn btn-danger">
		<i class="bi bi-trash"></i>
	</button>
</form>
