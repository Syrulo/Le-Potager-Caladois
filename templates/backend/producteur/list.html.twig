{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
					<h1>Liste des producteurs</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
			<!-- flash message -->
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</section>

	<section class="content">
		<div class="container p-5 mb-5">
			<div class="card col-lg-12 col-md-8 col-12 mx-auto p-3">
				<table class="table table-striped table-bordered align-middle">
					<thead>
						<tr class="text-center">
                            <th scope="col" style="width: 6%" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'id', direction: sort == 'id' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
									Id
                                    {% if sort == 'id' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'nom', direction: sort == 'nom' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Nom
                                    {% if sort == 'nom' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'email', direction: sort == 'email' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Email
                                    {% if sort == 'email' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">Rôles</th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'tel', direction: sort == 'tel' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Numéro de téléphone
                                    {% if sort == 'tel' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'adresse', direction: sort == 'adresse' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Adresse
                                    {% if sort == 'adresse' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'ville', direction: sort == 'ville' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Ville
                                    {% if sort == 'ville' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'code_postal', direction: sort == 'code_postal' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Code postal
                                    {% if sort == 'code_postal' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">Image</th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'createdAt', direction: sort == 'createdAt' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Created At
                                    {% if sort == 'createdAt' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.producteur', { sort: 'updatedAt', direction: sort == 'updatedAt' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Updated At
                                    {% if sort == 'updatedAt' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" style="width: 12%" class="d-none d-lg-table-cell">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
						{% for producteur in producteurs %}
							<tr>
								<th scope="row" class="d-none d-lg-table-cell text-center">{{ producteur.id }}</th>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.nom }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.email }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.utilisateur.roles|join(', ') }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.tel }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.adresse }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.ville }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.codePostal }}</td>
								<td class="d-none d-lg-table-cell text-center"><img src="{{ asset('images/producteurs/' ~ producteur.imageName) }}" alt="{{ producteur.nom }}" class="image"></td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.createdAt ? producteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ producteur.updatedAt ? producteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td class="d-table-cell d-lg-none d-flex flex-column">
									<div class="mb-2">
										<strong>Id:</strong>
										{{ producteur.id }}</div>
									<div class="mb-2">
										<strong>Nom:</strong>
										{{ producteur.nom }}</div>
									<div class="mb-2">
										<strong>Email:</strong>
										{{ producteur.email }}</div>
									<div class="mb-2">
										<strong>Rôles:</strong>
										{{ producteur.utilisateur.roles|join(', ') }}</div>
									<div class="mb-2">
										<strong>Téléphone:</strong>
										{{ producteur.tel }}</div>
									<div class="mb-2">
										<strong>Adresse:</strong>
										{{ producteur.adresse }}</div>
									<div class="mb-2">
										<strong>Ville:</strong>
										{{ producteur.ville }}</div>
									<div class="mb-2">
										<strong>Code Postal:</strong>
										{{ producteur.codePostal }}</div>
									<div class="mb-2">
										<strong>Image:</strong>
										<img src="{{ asset('images/producteurs/' ~ producteur.imageName) }}" alt="{{ producteur.nom }}" class="image"></div>
									<div class="mb-2">
										<strong>Créé le:</strong>
										{{ producteur.createdAt ? producteur.createdAt|date('Y-m-d H:i:s') : '' }}</div>
									<div class="mb-2">
										<strong>Mis à jour le:</strong>
										{{ producteur.updatedAt ? producteur.updatedAt|date('Y-m-d H:i:s') : '' }}</div>
									<div class="d-flex justify-content-around mb-2">
										<a href="{{ path('app_admin.producteur.edit', {'id': producteur.id}) }}" class="btn btn-primary">
											<i class="bi bi-pencil-square color-light"></i>
										</a>
										{# {{ include('backend/producteur/_delete_form.html.twig') }} #}
									</div>
								</td>
								<td class="d-none d-lg-table-cell">
									<div class="d-flex justify-content-around">
										<a href="{{ path('app_admin.producteur.edit', {'id': producteur.id}) }}" class="btn btn-primary">
											<i class="bi bi-pencil-square color-light"></i>
										</a>
										{{ include('backend/producteur/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="text-center">
					<a href="{{ path('app_admin.producteur.create') }}">
						<button type="submit" class="btn btn-color">Ajouter un producteur</button>
						<a></div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
