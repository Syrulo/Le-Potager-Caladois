{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Liste des producteurs</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="card w-75 mx-auto p-3 mt-5 wrapper">
			<table class="table table-striped align-middle">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">Nom</th>
						<th scope="col">Email</th>
						<th scope="col">Numéro de téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Ville</th>
						<th scope="col">Code postal</th>
						<th scope="col">Created At</th>
						<th scope="col">Updated At</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for producteur in producteurs %}
						<tr>
							<th scope="row">{{ producteur.id }}</th>
							<td>{{ producteur.nom }}</td>
							<td>{{ producteur.email }}</td>
							<td>{{ producteur.tel }}</td>
							<td>{{ producteur.adresse }}</td>
							<td>{{ producteur.ville }}</td>
							<td>{{ producteur.codePostal }}</td>
							<td>{{ producteur.createdAt ? producteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ producteur.updatedAt ? producteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
							<div class="d-flex justify-content-around">	
								<a href="{{ path('app_admin.producteur.edit', {'id': producteur.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square color-light"></i></a>
								{{ include('backend/producteur/_delete_form.html.twig') }}
							</div>	
							</td>
						</tr>
					{% endfor %}
				</tbody>
		</table>
		<a href="{{ path('app_admin.producteur.create') }}" class="text-center"><button type="submit" class="btn btn-color w-100 w-md-auto">Ajouter un producteur</button><a>
	</div>
{% endblock %}
