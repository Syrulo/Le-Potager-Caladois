{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="card w-75 mx-auto p-3 mt-5 wrapper">
			<h1 class="text-center">Liste des producteurs</h1>
			<table class="table table-striped align-middle">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">Nom</th>
						<th scope="col">Email</th>
						<th scope="col">Numéro de téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Ville</th>
						<th scope="col">Code postal</th>
						<th scope="col">Created At</th>
						<th scope="col">Updated At</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for producteur in producteurs %}
						<tr>
							<th scope="row">{{ producteur.id }}</th>
							<td>{{ producteur.nom }}</td>
							<td>{{ producteur.email }}</td>
							<td>{{ producteur.tel }}</td>
							<td>{{ producteur.adresse }}</td>
							<td>{{ producteur.ville }}</td>
							<td>{{ producteur.codePostal }}</td>
							<td>{{ producteur.createdAt ? producteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ producteur.updatedAt ? producteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a href="{{ path('app_admin.producteur.edit', {'id': producteur.id}) }}" class="btn btn-primary col-12">Modifier</a>
								<form action="{{ url('app_admin.producteur.delete', { id: producteur.id }) }}" method="post">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.id) }}">
									<button type="submit" class="btn btn-danger col-12">Supprimer</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
		</table>
		<a href="{{ path('app_admin') }}" class="text-center"><button type="submit" class="btn btn-color">Retour au panneau d'administration</button><a>
	</div>
{% endblock %}
