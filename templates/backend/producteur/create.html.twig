{% extends './layout/base.html.twig' %}
{% block title %}
    Ajout d'un nouveau producteur |
    {{ parent() }}
{% endblock %}
{% block body %}
    <section class="content-header">
        <div class="container p-4">
            <div class="d-flex flex-column align-items-center">
                <h1>Ajouter un producteur</h1>
                <div class="d-flex justify-content-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_admin.producteur') }}">Liste des producteurs</a>
                        </li>
                        <li class="breadcrumb-item active">Ajouter un producteur</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid p-5 mb-5">
            <div class="card col-lg-5 col-md-10 col-12 mx-auto p-3 mt-1">
                <div class="card-header">
                    <h3 class="card-title text-center">Ajouter un producteur</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    {# Champs du formulaire utilisateur #}
                    {{ form_label(form.utilisateur.email, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.utilisateur.email) }}
                        {{ form_widget(form.utilisateur.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-envelope icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.utilisateur.plainPassword.first, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.utilisateur.plainPassword.first) }}
                        {{ form_widget(form.utilisateur.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-lock icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.utilisateur.plainPassword.second, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.utilisateur.plainPassword.second) }}
                        {{ form_widget(form.utilisateur.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez le mot de passe'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-lock icon-large"></span>
                            </span>
                        </div>
                    </div>
                    
                    {# Champs du formulaire producteur #}
                    {{ form_label(form.producteur.nom, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.nom) }}
                        {{ form_widget(form.producteur.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-user icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.producteur.email, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.email) }}
                        {{ form_widget(form.producteur.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-envelope icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.producteur.description, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.description) }}
                        {{ form_widget(form.producteur.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                    </div>
                    {{ form_label(form.producteur.tel, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.tel) }}
                        {{ form_widget(form.producteur.tel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-phone icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.producteur.adresse, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.adresse) }}
                        {{ form_widget(form.producteur.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-home icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.producteur.ville, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.ville) }}
                        {{ form_widget(form.producteur.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <span class="fas fa-city icon-large"></span>
                            </span>
                        </div>
                    </div>
                    {{ form_label(form.producteur.code_postal, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.code_postal) }}
                        {{ form_widget(form.producteur.code_postal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
                    </div>
                    {{ form_label(form.producteur.imageFile, null, {'label_attr': {'class': 'single-line-label'}}) }}
                    <div class="input-group mb-3">
                        {{ form_errors(form.producteur.imageFile) }}
                        {{ form_widget(form.producteur.imageFile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
					{{ form_row(form._token) }}                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
