{% extends './layout/base.html.twig' %}

{% block title %}
	Modification d'une catégorie |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Modifier une catégorie</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin.categorie') }}">Liste des catégories</a>
						</li>
						<li class="breadcrumb-item active">Modifier une catégorie</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="content">
			<div class="card w-50 mx-auto p-3 mt-3">
				<div class="card-header">
					<h3 class="card-title">Modification d'une catégorie</h3>
				</div>
				{{ form_start(form) }}
				<div class="card-body">
				{{ form_widget(form) }}
				</div>
					<div class="card-footer text-center">
						<button type="submit" class="btn btn-color">{{ button_label|default('Mettre à jour') }}</button>
					</div>
			{{ form_end(form, {render_rest: false}) }}
				</form>
			</div>
		<!-- /.card -->
			</div>
</section>
{% endblock %}
