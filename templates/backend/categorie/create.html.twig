{% extends './layout/base.html.twig' %}

{% block title %}
	Création d'une nouvelle catégorie |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Ajouter une catégorie</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin.categorie') }}">Liste des catégories</a>
						</li>
						<li class="breadcrumb-item active">Ajouter une catégorie</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="content">
		<div class="container-fluid">
			<div class="card w-50 mx-auto p-3 mt-3">
				<div class="card-header">
					<h3>Création d'une catégorie</h3>
				</div>
			<div class="card-body">
				{{ form_start(form) }}
				{{ form_label(form.nom, null, {'label_attr': {'class': 'single-line-label'}}) }}
				<div class="input-group mb-3">
				{{ form_errors(form.nom) }}
				{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
				</div>
				{{ form_label(form.imageFile, null, {'label_attr': {'class': 'single-line-label'}}) }}
				<div class="input-group mb-3">
				{{ form_errors(form.imageFile) }}
				{{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

				<div class="card-footer text-center">
					<button type="submit" class="btn btn-color">Ajouter</button>
				</div>
				{{ form_row(form._token) }}
				{{ form_end(form, {render_rest: false}) }}
		</div>
	</section>
{% endblock %}
