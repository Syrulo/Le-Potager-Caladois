{% extends './layout/base.html.twig' %}

{% block title %}
	Création d'une nouvelle catégorie |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Ajouter une catégorie</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin.categorie') }}">Liste des catégories</a>
						</li>
						<li class="breadcrumb-item active">Ajouter une catégorie</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="content">
		<div class="card w-50 mx-auto p-3 mt-3">
			<div class="card-header">
				<h3 class="text-center">Création d'une catégorie</h3>
			</div>
			{{ form_start(form) }}
			<div class="card-body">
				{{ form_widget(form) }}
			</div>
			<div class="card-footer text-center">
				<button type="submit" class="btn btn-color">Ajouter</button>
			</div>
			{{ form_end(form, {render_rest: false}) }}
			</form>
		</div>
</section>
{% endblock %}
