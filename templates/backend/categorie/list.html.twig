{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des catégories
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
				<h1>Liste des catégories</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des catégories</li>
					</ol>
				</div>
			</div>
			<!-- flash message -->
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</section>
	
	<section class="content">
		<div class="container p-5 mb-5">
			<div class="card col-lg-12 col-md-8 col-12 mx-auto p-3">
				<table class="table table-striped table-bordered align-middle">
					<thead>
						<tr class="text-center">
							<th scope="col" style="width: 6%" class="d-none d-lg-table-cell">id</th>
							<th scope="col" class="d-none d-lg-table-cell">Nom</th>
							<th scope="col" class="d-none d-lg-table-cell">Image</th>
							<th scope="col" class="d-none d-lg-table-cell">Créé le</th>
							<th scope="col" class="d-none d-lg-table-cell">Mis à jour le</th>
							<th scope="col" class="d-none d-lg-table-cell">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<th scope="row" class="d-none d-lg-table-cell text-center">{{ categorie.id }}</th>
								<td class="d-none d-lg-table-cell text-center">{{ categorie.nom }}</td>
								<td class="d-none d-lg-table-cell text-center"><img src="http://127.0.0.1:8000/images/categories/{{ categorie.imageName }}" alt="{{ categorie.nom }}" class="image"></td>
								<td class="d-none d-lg-table-cell text-center">{{ categorie.createdAt ? categorie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td class="d-table-cell d-lg-none d-lg-none d-flex flex-column">
									<div class="mb-2">
										<strong>Id:</strong>
										{{ categorie.id }}
									</div>
									<div class="mb-2">
										<strong>Nom:</strong>
										{{ categorie.nom }}
									</div>
									<div class="mb-2">
										<strong>Image:</strong>
										<img src="{{ asset('images/categories/' ~ categorie.imageName) }}" alt="{{ categorie.nom }}" class="image">
									</div>
									<div class="mb-2">
										<strong>Créé le:</strong>
										{{ categorie.createdAt ? categorie.createdAt|date('Y-m-d H:i:s') : '' }}
									</div>
									<div class="mb-2">
										<strong>Mis à jour le:</strong>
										{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}
									</div>
									<div class="d-flex justify-content-around mb-2">
										<a href="{{ path('app_admin.categorie.edit', {'id': categorie.id}) }}" class="btn btn-primary">
											<i class="bi bi-pencil-square color-light"></i>
										</a>
										{{ include('backend/categorie/_delete_form.html.twig') }}
									</div>
								</td>
								<td class="d-none d-lg-table-cell">
									<div class="d-flex justify-content-around">
										<a href="{{ path('app_admin.categorie.edit', {'id': categorie.id}) }}" class="btn btn-primary">
											<i class="bi bi-pencil-square color-light"></i>
										</a>
										{{ include('backend/categorie/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="text-center">
					<a href="{{ path('app_admin.categorie.create') }}">
						<button type="submit" class="btn btn-color">Ajouter une catégorie</button>
						<a></div>
					</div>
				</div>
			</div>
		</section>
{% endblock %}
