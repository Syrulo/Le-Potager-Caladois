{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des produits
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container">
			<div class="row">
				<div class="text-center">
					<h1 class="filtitre">Liste des produits</h1>
				</div>
				<div class="breadcrumb justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des produits</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	{% for message in app.flashes('error') %}
		<div class="alert alert-success" role="alert">
			{{ message }}
		</div>
	{% endfor %}
<div class="container">
	<div class="card w-75 w-lg-75-custom mx-auto p-3 mt-5 wrapper">
		<table class="table table-striped table-bordered align-middle">
			<thead>
				<tr class="text-center">
					<th scope="col" style="width: 6%" class="d-none d-lg-table-cell">id</th>
					<th scope="col" class="d-none d-lg-table-cell">Nom</th>
					<th scope="col" class="d-none d-lg-table-cell">Catégorie</th>
					<th scope="col" class="d-none d-lg-table-cell">Prix</th>						
					<th scope="col" class="d-none d-lg-table-cell">Producteur</th>
					<th scope="col" class="d-none d-lg-table-cell">Image</th>
					<th scope="col" class="d-none d-lg-table-cell">Créé le</th>
					<th scope="col" class="d-none d-lg-table-cell">Mis à jour le</th>
					<th scope="col" class="d-none d-lg-table-cell">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<th scope="row" class="d-none d-lg-table-cell text-center">{{ produit.id }}</th>
						<td class="d-none d-lg-table-cell text-center">{{ produit.nom }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ produit.categorie.nom }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ produit.prix}} € /kg</td>
						<td class="d-none d-lg-table-cell text-center">{{ produit.producteur.nom }}</td>
						<td class="d-none d-lg-table-cell text-center"><img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" alt="{{ produit.nom }}" class="image"></td>
						<td class="d-none d-lg-table-cell text-center">{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="d-table-cell d-lg-none d-flex flex-column">
							<div class="mb-2"><strong>Id:</strong> {{ produit.id }}</div>
							<div class="mb-2"><strong>Nom:</strong> {{ produit.nom }}</div>
							<div class="mb-2"><strong>Catégorie:</strong> {{ produit.categorie.nom }}</div>
							<div class="mb-2"><strong>Prix:</strong> {{ produit.prix }} € /kg</div>
							<div class="mb-2"><strong>Producteur:</strong> {{ produit.producteur.nom }}</div>
							<div class="mb-2"><strong>Image:</strong><img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" alt="{{ produit.nom }}" class="image"></div>
							<div class="mb-2"><strong>Créé le:</strong>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</div>
							<div class="mb-2"><strong>Mis à jour le:</strong>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</div>
							<div class="d-flex justify-content-around mb-2">
								<a href="{{ path('app_admin.produit.edit', {'id': produit.id}) }}" class="btn btn-primary">
									<i class="bi bi-pencil-square color-light"></i>
								</a>
								{{ include('backend/produit/_delete_form.html.twig') }}
							</div>
						</td>
						<td class="d-none d-lg-table-cell">
							<div class="d-flex justify-content-around">	
								<a href="{{ path('app_admin.produit.edit', {'id': produit.id}) }}" class="btn btn-primary">
								<i class="bi bi-pencil-square color-light"></i>
								</a>
								{{ include('backend/produit/_delete_form.html.twig') }}
							</div>	
						</td>
					</tr>
				{% endfor %}
			</tbody>
			</table>
		<div class="text-center">
			<a href="{{ path('app_admin.produit.create') }}" class="text-center">
			<button type="submit" class="btn btn-color">Ajouter un produit</button>
			<a>
		</div>
	</div>
</div>
{% endblock %}
