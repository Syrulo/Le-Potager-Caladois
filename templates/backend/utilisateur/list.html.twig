{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des utilisateurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Liste des utilisateurs</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des utilisateurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container mt-3 p-3">
	<div class="card w-100 mx-auto p-3 wrapper">
		<table class="table table-striped table-bordered align-middle">
			<thead>
				<tr>
					<th scope="col" style="width: 4%" class="d-none d-lg-table-cell">id</th>
					<th scope="col" class="d-none d-lg-table-cell">Rôles</th>
					<th scope="col" class="d-none d-lg-table-cell">email</th>
                    <th scope="col" class="d-none d-lg-table-cell">Prenom</th>
					<th scope="col" class="d-none d-lg-table-cell">Nom</th>
                    <th scope="col" class="d-none d-lg-table-cell">Telephone</th>
                    <th scope="col" class="d-none d-lg-table-cell">Adresse</th>
                    <th scope="col" class="d-none d-lg-table-cell">Ville</th>
                    <th scope="col" class="d-none d-lg-table-cell">Code postal</th>
					<th scope="col" class="d-none d-lg-table-cell">Created At</th>
					<th scope="col" class="d-none d-lg-table-cell">Updated At</th>
					<th scope="col" class="d-none d-lg-table-cell">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for utilisateur in utilisateurs %}
					<tr>
                    <th scope="row" class="d-none d-lg-table-cell">{{ utilisateur.id }}</th>
					<td class="d-none d-lg-table-cell">{{ utilisateur.email }}</td>
					<td class="d-none d-lg-table-cell">{{ utilisateur.roles|join(', ') }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.nom }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.prenom }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.tel }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.adresse }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.ville }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.codePostal }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.createdAt ? utilisateur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.updatedAt ? utilisateur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="d-table-cell d-lg-none">
						<strong>Id:</strong> {{ utilisateur.id }}<br>
						<strong>Email:</strong> {{ utilisateur.email }}<br>
                        <strong>Nom:</strong> {{ utilisateur.utilisateurDetails.nom }}<br>
                        <strong>Prénom:</strong> {{ utilisateur.utilisateurDetails.prenom }}<br>
                        <strong>Téléphone:</strong> {{ utilisateur.utilisateurDetails.tel }}<br>
                        <strong>Adresse:</strong> {{ utilisateur.utilisateurDetails.adresse }}<br>
                        <strong>Ville:</strong> {{ utilisateur.utilisateurDetails.ville }}<br>
                        <strong>Code Postal:</strong> {{ utilisateur.utilisateurDetails.codePostal }}<br>
                        <strong>Créé le:</strong> {{ utilisateur.utilisateurDetails.createdAt ? utilisateur.createdAt|date('Y-m-d H:i:s') : '' }}<br>
                        <strong>Mis à jour le:</strong> {{ utilisateur.utilisateurDetails.updatedAt ? utilisateur.updatedAt|date('Y-m-d H:i:s') : '' }}
					</td>
						<td class="text-center">
							<div class="d-flex flex-wrap justify-content-around">		
								<a href="{{ path('app_admin_utilisateur.edit', {'id': utilisateur.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square color-light"></i></a>
								{{ include('backend/utilisateur/_delete_form.html.twig') }}
							</div>
						</td>
						</th>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		</div>
	</div>
	</div>	
{% endblock %}