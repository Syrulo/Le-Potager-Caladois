{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des utilisateurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Liste des utilisateurs</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des utilisateurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
<div class="container">
	<div class="card w-50 w-lg-75-custom mx-auto p-3 mt-5 wrapper">
		<table class="table table-striped table-bordered align-middle">
			<thead>
				<tr class="text-center">
					<th scope="col" style="width: 4%" class="d-none d-lg-table-cell">id</th>
					<th scope="col" class="d-none d-lg-table-cell">email</th>
					<th scope="col" class="d-none d-lg-table-cell">Rôles</th>
                    <th scope="col" class="d-none d-lg-table-cell">Prenom</th>
					<th scope="col" class="d-none d-lg-table-cell">Nom</th>
                    <th scope="col" class="d-none d-lg-table-cell">Téléphone</th>
                    <th scope="col" class="d-none d-lg-table-cell">Adresse</th>
                    <th scope="col" class="d-none d-lg-table-cell">Ville</th>
                    <th scope="col" class="d-none d-lg-table-cell">Code postal</th>
					<th scope="col" class="d-none d-lg-table-cell">Créé le</th>
					<th scope="col" class="d-none d-lg-table-cell">Mis à jour le</th>
					<th scope="col" class="d-none d-lg-table-cell">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for utilisateur in utilisateurs %}
					<tr>
						<th scope="row" class="d-none d-lg-table-cell text-center">{{ utilisateur.id }}</th>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.email }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.roles|join(', ') }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.nom }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.prenom }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.tel }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.adresse }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.ville }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.codePostal }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.createdAt ? utilisateur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="d-none d-lg-table-cell text-center">{{ utilisateur.utilisateurDetails.updatedAt ? utilisateur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="d-table-cell d-lg-none d-flex flex-column">
							<div class="mb-2"><strong>Id:</strong> {{ utilisateur.id }}</div>
							<div class="mb-2"><strong>Email:</strong> {{ utilisateur.email }}</div>
							<div class="mb-2"><strong>Rôles:</strong> {{ utilisateur.roles|join(', ') }}</div>
							<div class="mb-2"><strong>Nom:</strong> {{ utilisateur.utilisateurDetails.nom }}</div>
							<div class="mb-2"><strong>Prénom:</strong> {{ utilisateur.utilisateurDetails.prenom }}</div>
							<div class="mb-2"><strong>Téléphone:</strong> {{ utilisateur.utilisateurDetails.tel }}</div>
							<div class="mb-2"><strong>Adresse:</strong> {{ utilisateur.utilisateurDetails.adresse }}</div>
							<div class="mb-2"><strong>Ville:</strong> {{ utilisateur.utilisateurDetails.ville }}</div>
							<div class="mb-2"><strong>Code Postal:</strong> {{ utilisateur.utilisateurDetails.codePostal }}</div>
							<div class="mb-2"><strong>Créé le:</strong> {{ utilisateur.utilisateurDetails.createdAt ? utilisateur.createdAt|date('Y-m-d H:i:s') : '' }}</div>
							<div class="mb-2"><strong>Mis à jour le:</strong> {{ utilisateur.utilisateurDetails.updatedAt ? utilisateur.updatedAt|date('Y-m-d H:i:s') : '' }}</div>
							<div class="d-flex justify-content-around mb-2">		
								<a href="{{ path('app_admin_utilisateur.edit', {'id': utilisateur.id}) }}" class="btn btn-primary">
								<i class="bi bi-pencil-square color-light"></i>
								</a>
								{{ include('backend/utilisateur/_delete_form.html.twig') }}
							</div>
						</td>
						<td class="d-none d-lg-table-cell">
							<div class="d-flex justify-content-around">	
								<a href="{{ path('app_admin_utilisateur.edit', {'id': utilisateur.id}) }}" class="btn btn-primary">
								<i class="bi bi-pencil-square color-light"></i>
								</a>
								{{ include('backend/utilisateur/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}