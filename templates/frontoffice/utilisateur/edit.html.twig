{% extends './layout/base.html.twig' %}

{% block title %}Modifiez votre profil{% endblock %}
{% block importmap %}{{ importmap(['app', 'search-input']) }}{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
				<h1>Modifier mon profil</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('profil') }}">Retour à mon profil</a>
						</li>
						<li class="breadcrumb-item active">Modifier mon profil</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="container-fluid mb-5 p-5">
			<div class="card col-lg-5 col-md-10 col-12 mx-auto p-3 mb-3">
				<div class="card-header">
					<h3 class="mt4 text-center">Formulaire de modification des informations de l'utilisateur</h3>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					{{ form_errors(form) }}
					{{ form_label(form.firstname, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.firstname) }}
						{{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-user icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.lastname, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.lastname) }}
						{{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-user icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.email) }}
					<div class="input-group mb-3">
						{{ form_errors(form.email) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-envelope icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.phone, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.phone) }}
						{{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-phone icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.address.number, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.address.number) }}
						{{ form_widget(form.address.number, {'attr': {'class': 'form-control', 'placeholder': 'Numéro'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-home icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.address.street, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.address.street) }}
						{{ form_widget(form.address.street, {'attr': {'class': 'form-control', 'placeholder': 'Rue'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-city icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.address.postalCode, null, {'label_attr': {'class': 'single-line-label'}}) }}
					<div class="input-group mb-3">
						{{ form_errors(form.address.postalCode) }}
						{{ form_widget(form.address.postalCode, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-map-marker-alt icon-large"></span>
							</span>
						</div>
					</div>
					{{ form_label(form.address.city) }}
					<div class="input-group mb-3" id="addressContainer">
						{{ form_errors(form.address.city) }}
						{{ form_widget(form.address.city, {'attr': {'class': 'form-control', 'placeholder': 'Ville', 'data-action': 'address-input', 'data-target': 'city-dropdown'}}) }}
						<div id="dropdownMenu" class="dropdown-menu dropdown-city hidden w-100 mt-1">
							<ul id="dropdownResults" class="list-group">
							</ul>
						</div>
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-city icon-large"></span>
							</span>
						</div>
					</div>
				</div>

				<div class="card-footer text-center">
					<button type="submit" class="btn btn-color">{{ button_label|default('Mettre à jour') }}</button>
				</div>
				{{ form_row(form._token) }}
				{{ form_end(form, {render_rest: false}) }}
			</div>
		</div>
	</section>
{% endblock %}
