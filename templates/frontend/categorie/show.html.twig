{% extends './layout/base.html.twig' %}

{% block title %}
	{{ categorie.nom }}
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
				<h1>{{ categorie.nom }}</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
						</li>
						<li class="breadcrumb-item active">{{ categorie.nom }}</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="container p-5 mb-5">
			<div class="row justify-content-center">
				{% for produit in produits %}
					<div class="col-12 col-sm-6 col-md-5 col-lg-3 mb-4 listcard">
						<div class="card d-flex flex-column h-100 mx-auto w-100">
							<a href="{{ path('app_produit', {'slug': produit.slug}) }}"><img src="{{ asset('images/produits/' ~ produit.imageName) }}" class="card-img-top p-3 card-img-custom" alt="{{ produit.nom }}"><a>
							<div class="card-body text-center">
								<h5 class="card-title text-center">{{ produit.nom}}</h5>
								<div class="card-text text-center mb-3">
									<div>{{ produit.prix}}
										€ /kg</div>
									<a href="{{ path('app_producteur.details', {'slug': produit.producteur.slug}) }}">
										<div>{{ produit.producteur.nom }}</div>
									</a>
								</div>
								<a href="{{ path('app_produit', {'slug': produit.slug}) }}" class="btn-bottom">
									<button type="submit" class="btn btn-color">Détails</button>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}