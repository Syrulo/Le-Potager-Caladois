{% extends './layout/base.html.twig' %}

{% block title %}
	{{ categorie.nom }}
	{{ parent() }}
{% endblock %}

{% block body %}
<section class="content-header">
	<div class="container">
		<div class="row">
			<div class="text-center">
				<h1 class="filtitre">Boissons</h1>
			</div>
			<div class="breadcrumb justify-content-center">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
					</li>
					<li class="breadcrumb-item active">Boissons</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<div class="container p-5 {{ produits|length <= 3 ? 'centrer-unique-produits' : '' }}">
	<div class="row">
		{% for produit in produits %}
			<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 align-items-stretch">
				<div class="card d-flex flex-column h-100 mx-auto card-custom">
					<img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" class="card-img-top p-3 card-img-custom" alt="{{ produit.nom }}" class="imgFruit">
					<div class="card-body text-center card-body-custom">
						<h5 class="card-title text-center">{{ produit.nom}}</h5>
						<div class="card-text text-center mb-2">
							<div>{{ produit.prix}}
								€ /kg</div>
							<a href="{{ path('app_producteur.details', {'slug': produit.producteur.slug}) }}">
								<div>{{ produit.producteur.nom }}</div>
							</a>
						</div>
						<a href="{{ path('app_produit', {'slug': produit.slug}) }}" class="btn-bottom">
							<button type="submit" class="btn btn-color">Détails</button>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>{% endblock %}
