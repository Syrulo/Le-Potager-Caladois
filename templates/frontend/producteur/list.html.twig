{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container">
			<div class="row">
				<div class="text-center">
					<h1 class="filtitre">Nos producteurs</h1>
				</div>
				<div class="breadcrumb justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container p-5 mb-5">
		<div class="row justify-content-center">
			{% for producteur in producteurs %}
			<div class="card col-lg-8 col-md-10 col-sm-8 p-4 mt-5">
				<div class="row">
					<div class="col-md-6">
						<img src="http://127.0.0.1:8000/images/producteurs/{{ producteur.imageName }}" alt="{{ producteur.nom }}" class="img-fluid produit-image">
					</div>
					<div class="col-md-6 mt-sm-3 mt-md-0 text-center text-md-start">
						<h3>{{ producteur.nom }}</h3>
						<p class="producteur-description">{{ producteur.description }}</p>
						<a href="{{ path('app_producteur.details', {'slug': producteur.slug}) }}" class="btn btn-color w-50 align-self-center">Détails</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
