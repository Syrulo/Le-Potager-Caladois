{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container">
			<div class="row">
				<div class="text-center">
					<h1 class="filtitre">Liste des Producteurs</h1>
				</div>
				<div class="breadcrumb justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour Ã  l'accueil</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container {{ producteurs|length == 1 ? 'centrer-unique-producteur' : '' }}">
		<div class="row">
			{% for producteur in producteurs %}
				<div class="col-12 col-md-4 col-sm-6 mb-4">
					<div class="card d-flex p-2 mx-auto wrapper">
						<div class="card-body text-center">
							<h5 class="card-title text-center">{{ producteur.nom}}</h5>
							<a href="{{ path('app_producteur.details', {'slug': producteur.slug}) }}" class="btn btn-color btn-block btn-sm m-1">
								Voir le producteur "{{ producteur.nom}}"
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
