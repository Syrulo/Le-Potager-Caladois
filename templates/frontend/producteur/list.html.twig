{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container">
			<div class="row">
				<div class="text-center">
					<h1 class="filtitre">Liste des Producteurs</h1>
				</div>
				<div class="breadcrumb justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container p-5 {{ producteurs|length <= 3 ? 'centrer-unique-producteur' : '' }}">
		<div class="row">
			{% for producteur in producteurs %}
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 align-items-stretch">
					<div class="card d-flex flex-column h-100 mx-auto card-custom">
						<img src="http://127.0.0.1:8000/images/producteurs/{{ producteur.imageName }}" class="card-img-top p-3 card-img-custom" alt="{{ producteur.nom }}" class="imgFruit">
						<div class="card-body text-center card-body-custom">
							<h5 class="card-title text-center">{{ producteur.nom}}</h5>
							<a href="{{ path('app_producteur.details', {'slug': producteur.slug}) }}" class="btn-bottom">
								<button type="submit" class="btn btn-color">Détails</button>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
