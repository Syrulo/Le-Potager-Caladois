{% extends './layout/base.html.twig' %}

{% block title %}
	{{ producteur.nom }}
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
					<h1>Producteur</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_producteur') }}">Retour à la liste des producteurs</a>
						</li>
						<li class="breadcrumb-item active">Producteur</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	
	<section class="content">
		<div class="container p-5">
			<div class="row justify-content-center">
				<div class="card col-lg-8 col-md-10 col-sm-10 p-4">
					<div class="row">			
						<div class="col-md-6">
							<img src="{{ asset('images/producteurs/' ~ producteur.imageName) }}" alt="{{ producteur.nom }}" class="img-fluid produit-image-detail">
						</div>	
						<div class="col-md-6 mt-sm-3 mt-md-0 text-center text-md-start align-self-center">
							<h2 class="mb-2">{{ producteur.nom }}</h2>
							<div class="mb-2"><strong>Email: </strong>{{ producteur.email }}</div>
							<div class="mb-2"><strong>Téléphone: </strong>{{ producteur.tel }}</div>
							<div class="mb-2"><strong>Adresse: </strong>{{ producteur.adresse }}</div>
							<div class="mb-2"><strong>Ville: </strong>{{ producteur.ville }}</div>
							<div class="mb-2"><strong>Code Postal: </strong>{{ producteur.codePostal }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<section class="content">
		<div class="container p-3 mb-5">
			<div class="card col-lg-12 col-md-8 col-12 mx-auto p-3">
				<table class="table table-striped table-bordered align-middle">
					<thead>
						<tr class="text-center">
							<th scope="col" class="d-none d-lg-table-cell">Nom</th>
							<th scope="col" class="d-none d-lg-table-cell">Catégorie</th>
							<th scope="col" class="d-none d-lg-table-cell">Prix</th>
							<th scope="col" class="d-none d-lg-table-cell">Producteur</th>
							<th scope="col" class="d-none d-lg-table-cell">Image</th>
							<th scope="col"  style="width: 10%" class="d-none d-lg-table-cell">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for produit in produits %}
							<tr>
								<td class="d-none d-lg-table-cell text-center">{{ produit.nom }}</td>
								<td class="d-none d-lg-table-cell text-center">{{ produit.categorie.nom }}</td>
								<td class="d-none d-lg-table-cell text-center">
								{{ produit.prix}}
								{% if produit.categorie.nom == 'Boissons' %}
                                    €/L TTC
                                {% else %}
                                    €/kg TTC
                                {% endif %}
								</td>
								<td class="d-none d-lg-table-cell text-center">{{ produit.producteur.nom }}</td>
								<td class="d-none d-lg-table-cell text-center"><img src="{{ asset('images/produits/' ~ produit.imageName) }}" alt="{{ produit.nom }}" class="image"></td>
								<td class="d-table-cell d-lg-none d-flex flex-column">
									<div class="mb-2">
										<strong>Nom:</strong>
										{{ produit.nom }}</div>
									<div class="mb-2">
										<strong>Catégorie:</strong>
										{{ produit.categorie.nom }}</div>
									<div class="mb-2">
										<strong>Prix:</strong>
										{{ produit.prix }}
										€ /kg</div>
									<div class="mb-2">
										<strong>Producteur:</strong>
										{{ produit.producteur.nom }}</div>
									<div class="mb-2">
										<strong>Image:</strong>
										<img src="{{ asset('images/produits/' ~ produit.imageName) }}" alt="{{ produit.nom }}" class="image"></div>
									<div class="d-flex mb-2 justify-content-center">
										<a href="{{ path('app_produit', {'slug': produit.slug}) }}" class="btn-bottom">
											<button type="submit" class="btn btn-color">Détails</button>
										</a>
									</div>
								</td>
								<td class="d-none d-lg-table-cell">
									<div class="d-flex justify-content-center">
										<a href="{{ path('app_produit', {'slug': produit.slug}) }}" class="btn-bottom">
											<button type="submit" class="btn btn-color">Détails</button>
										</a>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</section>
{% endblock %}