{% extends './layout/base.html.twig' %}

{% block title %}
	{{ producteur.nom }}
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Producteur</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_producteur') }}">Retour Ã  la liste des producteurs</a>
						</li>
						<li class="breadcrumb-item active">Producteur</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container-fluid mt-4">
		<div class="card w-50 mx-auto p-3">
			<h1 class="text-center">{{ producteur.nom }}</h1>
			<p class="text-center">{{ producteur.email }}</p>
			<p class="text-center">{{ producteur.tel }}</p>
			<p class="text-center">{{ producteur.adresse }}</p>
			<p class="text-center">{{ producteur.ville }}</p>
			<p class="text-center">{{ producteur.codePostal }}</p>		
			{% for produit in produits %}
				<a href="{{ path('app_produit', {'slug': produit.slug}) }}">{{ produit.nom }}</a>
				<img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" alt="">
			{% endfor %}
			<table class="table table-striped">
				<tbody>
				</tbody>
		</table>
	{% endblock %}