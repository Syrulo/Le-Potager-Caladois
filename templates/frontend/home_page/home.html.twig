			<a href="{{ path('app_admin.produit') }}"><button type="submit" class="btn btn-color w-100">Gérer les produits</button><a>
			</div>
			<div class="mb-3 mb-lg-0">
			<a href="{{ path('app_admin.utilisateur') }}"><button type="submit" class="btn btn-color w-100">Gérer les utilisateurs</button><a>
			</div>	
	</div>
