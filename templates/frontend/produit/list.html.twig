{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des produits
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Liste des produits</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
						</li>
						<li class="breadcrumb-item active">Liste des produits</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
		<div class="card w-75 mx-auto p-5 mt-5">
			<table class="table table-striped align-middle">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">Nom</th>
						<th scope="col">Catégorie</th>
						<th scope="col">Prix</th>						
						<th scope="col">Producteur</th>
						<th scope="col">Image</th>
                        <th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for produit in produits %}
						<tr>
							<th scope="row">{{ produit.id }}</th>
							<td>{{ produit.nom }}</td>
							<td>{{ produit.categorie.nom }}</td>
							<td>{{ produit.prix}} € /kg</td>
							<td>{{ produit.producteur.nom }}</td>
							<td><img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" alt="{{ produit.nom }}" class="image"></td>
							<td>
								<a href="{{ path('app_produit', {'slug': produit.slug}) }}" class="btn btn-primary">Détails</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		{% endblock %}
