{% extends './layout/base.html.twig' %}

{% block title %}
	Mon profil
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container mt-3 p-5">
			<div class="d-flex justify-content-between align-items-center">
				<div class="text-left">
					<h1>Mon profil</h1>
				</div>
				<div class="me-5">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_home_page') }}">Retour à l'accueil</a>
						</li>
						<li class="breadcrumb-item active">Mon profil</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<div class="container mt-3 p-3">
		<div class="card w-75 mx-auto p-3 wrapper">
			<h3 class="text-center">Vos informations personnelles</h3>
			<table class="table table-striped table-bordered align-middle">
				<thead>
					<tr>
						<th scope="col" class="d-none d-lg-table-cell">Nom</th>
						<th scope="col" class="d-none d-lg-table-cell">Prenom</th>
						<th scope="col" class="d-none d-lg-table-cell">Telephone</th>
						<th scope="col" class="d-none d-lg-table-cell">Adresse</th>
						<th scope="col" class="d-none d-lg-table-cell">Ville</th>
						<th scope="col" class="d-none d-lg-table-cell">Code postal</th>
						<th scope="col" class="d-none d-lg-table-cell">Actions</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.prenom }}</td>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.nom }}</td>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.tel }}</td>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.adresse }}</td>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.ville }}</td>
						<td class="d-none d-lg-table-cell">{{ utilisateur.utilisateurDetails.codePostal }}</td>
						<td class="d-table-cell d-lg-none">
							<strong>Nom:</strong> {{ utilisateur.utilisateurDetails.nom }}<br>
							<strong>Prénom:</strong> {{ utilisateur.utilisateurDetails.prenom }}<br>
							<strong>Téléphone:</strong> {{ utilisateur.utilisateurDetails.tel }}<br>
							<strong>Adresse:</strong> {{ utilisateur.utilisateurDetails.adresse }}<br>
							<strong>Ville:</strong> {{ utilisateur.utilisateurDetails.ville }}<br>
							<strong>Code Postal:</strong> {{ utilisateur.utilisateurDetails.codePostal }}<br>
						</td>
						<td>
							<div class="d-flex justify-content-around">
								<a href="{{ path('profil.edit', {'id': utilisateur.id}) }}" class="btn btn-primary">
									<i class="bi bi-pencil-square color-light"></i>
								</a>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
