{% extends './layout/base.html.twig' %}

{% block title %}Modifiez votre profil
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
				<h1>Modifier mon profil</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('profil') }}">Retour à mon profil</a>
						</li>
						<li class="breadcrumb-item active">Modifier mon profil</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	
	<section class="content">
		<div class="container-fluid mb-5 p-5">
			<div class="card col-lg-5 col-md-10 col-12 mx-auto p-3">
				<div class="card-header">
					<h3 class="mt4 text-center">Formulaire de modification des informations de l'utilisateur</h3>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					{% if form.utilisateurDetails.prenom is defined and form.utilisateurDetails.nom is defined %}
						{{ form_label(form.utilisateurDetails.prenom, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.prenom) }}
						{{ form_widget(form.utilisateurDetails.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-user icon-large"></span>
								</span>
							</div>
						</div>
						{{ form_label(form.utilisateurDetails.nom, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.nom) }}
						{{ form_widget(form.utilisateurDetails.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-user icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.utilisateurDetails.tel is defined %}
						{{ form_label(form.utilisateurDetails.tel, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.tel) }}
						{{ form_widget(form.utilisateurDetails.tel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-phone icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.utilisateurDetails.adresse is defined %}
						{{ form_label(form.utilisateurDetails.adresse, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.adresse) }}
						{{ form_widget(form.utilisateurDetails.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-home icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.utilisateurDetails.ville is defined %}
						{{ form_label(form.utilisateurDetails.ville, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.ville) }}
						{{ form_widget(form.utilisateurDetails.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-city icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.utilisateurDetails.code_postal is defined %}
						{{ form_label(form.utilisateurDetails.code_postal, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
						{{ form_errors(form.utilisateurDetails.code_postal) }}
						{{ form_widget(form.utilisateurDetails.code_postal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-map-marker-alt icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
				</div>

				<div class="card-footer text-center">
					<button type="submit" class="btn btn-color">{{ button_label|default('Mettre à jour') }}</button>
				</div>
				{{ form_row(form._token) }}
				{{ form_end(form, {render_rest: false}) }}
			</div>
		</div>
	</section>
{% endblock %}

