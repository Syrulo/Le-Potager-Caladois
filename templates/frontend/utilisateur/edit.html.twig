{% extends './layout/base.html.twig' %}

{% block title %}Modifiez votre profil
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
				<h1>Modifier mon profil</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('profil') }}">Retour à mon profil</a>
						</li>
						<li class="breadcrumb-item active">Modifier mon profil</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="container-fluid mb-5 p-5">
			<div class="card col-lg-5 col-md-10 col-12 mx-auto p-3">
				<div class="card-header">
					<h3 class="mt4 text-center">Formulaire de modification des informations de l'utilisateur</h3>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					{% if form.firstname is defined and form.lastname is defined %}
						{{ form_label(form.firstname, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.firstname) }}
							{{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-user icon-large"></span>
								</span>
							</div>
						</div>
						{{ form_label(form.lastname, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.lastname) }}
							{{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-user icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{{ form_label(form.email) }}
					<div class="input-group mb-3">
						{{ form_errors(form.email) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						<div class="input-group-append">
							<span class="input-group-text">
								<span class="fas fa-envelope icon-large"></span>
							</span>
						</div>
					</div>
					{% if form.phone is defined %}
						{{ form_label(form.phone, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.phone) }}
							{{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-phone icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.adresse is defined %}
						{{ form_label(form.adresse, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.adresse) }}
							{{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-home icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.ville is defined %}
						{{ form_label(form.ville, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.ville) }}
							{{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-city icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
					{% if form.code_postal is defined %}
						{{ form_label(form.code_postal, null, {'label_attr': {'class': 'single-line-label'}}) }}
						<div class="input-group mb-3">
							{{ form_errors(form.code_postal) }}
							{{ form_widget(form.code_postal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
							<div class="input-group-append">
								<span class="input-group-text">
									<span class="fas fa-map-marker-alt icon-large"></span>
								</span>
							</div>
						</div>
					{% endif %}
				</div>

				<div class="card-footer text-center">
					<button type="submit" class="btn btn-color">{{ button_label|default('Mettre à jour') }}</button>
				</div>
				{{ form_row(form._token) }}
				{{ form_end(form, {render_rest: false}) }}
			</div>
		</div>
	</section>
{% endblock %}
