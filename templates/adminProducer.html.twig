											<i class="bi bi-pencil-square color-light"></i>
										</a>
                                        {{ include('backend/producteur/_delete_form.html.twig') }}
									</div>
								</td>
								<td class="d-none d-lg-table-cell">
									<div class="d-flex justify-content-between">
										<a href="{{ path('app_admin_producer_edit', {'id': producer.id}) }}" class="btn btn-primary">
											<i class="bi bi-pencil-square color-light"></i>
										</a>
										{{ include('backend/producteur/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="text-center">
					<a href="{{ path('app_admin.producer.create') }}">
						<button type="submit" class="btn btn-color">Ajouter un producteur</button>
