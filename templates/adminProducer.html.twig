{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div class="container p-4">
			<div class="d-flex flex-column align-items-center">
					<h1>Liste des producteurs</h1>
				<div class="d-flex justify-content-center">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin') }}">Panneau d'administration</a>
						</li>
						<li class="breadcrumb-item active">Liste des producteurs</li>
					</ol>
				</div>
			</div>
			<!-- flash message -->
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</section>

	<section class="content">
		<div class="container p-5 mb-5">
			<div class="card col-lg-12 col-md-8 col-12 mx-auto p-3">
				<table class="table table-striped table-bordered align-middle">
					<thead>
						<tr class="text-center">
                            <th scope="col" style="width: 6%" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin_producer', { sort: 'id', direction: sort == 'id' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
									Id
                                    {% if sort == 'id' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin_producer', { sort: 'brandName', direction: sort == 'brandName' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Nom commercial
                                    {% if sort == 'brandName' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin_producer', { sort: 'contactEmail', direction: sort == 'contactEmail' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
