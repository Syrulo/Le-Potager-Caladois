                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin_producer', { sort: 'phone', direction: sort == 'phone' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Téléphone
                                    {% if sort == 'phone' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin_producer', { sort: 'description', direction: sort == 'description' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Description
                                    {% if sort == 'description' %}
                                        {% if direction == 'asc' %}
                                            &#9650;
                                        {% else %}
                                            &#9660;
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </th>
                            {# <th scope="col" class="d-none d-lg-table-cell">
                                <a href="{{ path('app_admin.visitor', { sort: 'adresse', direction: sort == 'adresse' and direction == 'asc' ? 'desc' : 'asc' }) }}" class="text-decoration-none text-dark">
                                    Adresse
