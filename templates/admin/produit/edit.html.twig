{% extends './layout/base.html.twig' %}

{% block title %}
	Modification d'un produit |
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4">
		<div class="card w-50 mx-auto p-3">
			<h1 class="text-center">Modification d'un produit</h1>
			{{ form_start(form) }}
			{{ form_row(form.nom) }}
			{{ form_row(form.prix) }}
			{# <img src="http://127.0.0.1:8000/images/produits/{{ form.vars.data.imageName }}"> #}
			{{ form_row(form.imageFile, { 'attr': { 'style': 'height: 100px, width: 100px' } }) }}
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
