{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des producteurs
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4">
		<div class="card w-50 mx-auto p-3">
			<h1 class="text-center">Liste des producteurs</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">Nom</th>
						<th scope="col">Email</th>
						<th scope="col">Numéro de téléphone</th>
						<th scope="col">Adresse</th>
						<th scope="col">Ville</th>
						<th scope="col">Code postal</th>
						<th scope="col">Created At</th>
						<th scope="col">Updated At</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for producteur in producteurs %}
						<tr>
							<th scope="row">{{ producteur.id }}</th>
							<td>{{ producteur.nom }}</td>
							<td>{{ producteur.email }}</td>
							<td>{{ producteur.tel }}</td>
							<td>{{ producteur.adresse }}</td>
							<td>{{ producteur.ville }}</td>
							<td>{{ producteur.codePostal }}</td>
							<td>{{ producteur.createdAt ? producteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ producteur.updatedAt ? producteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a href="{{ path('app_admin.producteur.edit', {'id': producteur.id}) }}" class="btn btn-primary">Modifier</a>
								<form action="{{ url('app_admin.producteur.delete', { id: producteur.id }) }}" method="post">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.id) }}">
									<button type="submit" class="btn btn-danger">Supprimer</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
		</table>
	{% endblock %}
